pipeline {
  agent any
  stages {
    stage('checkout') {
      steps {
        git(url: 'https://github.com/MyQEpitech/ze_node_project', branch: 'test')
      }
    }

    stage('test') {
      steps {
        sh 'docker compose -f docker-compose.test.yml up -d --build'
        sh 'docker compose -f docker-compose.test.yml run api npm test'
        sh 'docker compose -f docker-compose.test.yml down'
      }
    }

  }
}